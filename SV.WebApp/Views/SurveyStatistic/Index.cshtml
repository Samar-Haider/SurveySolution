@model IEnumerable<Survey>
@{
    ViewData["Title"] = "Surveys Statistics";
}

<div class="box">
    <div class="header">
        <h4>Select Survey For Statistics</h4>
    </div>
    <div class="content">
        @if (Model.Count() > 0)
        {
            <div class="rowelement">
                <div class="span3">
                    Choose Survey:
                </div>
                <div class="span5">
                    <select id="surveysDDL">
                        <option value="0" selected="selected">Please select</option>
                        @foreach (var survey in Model)
                        {
                            <option value="@survey.Id">@survey.Name</option>
                        }
                    </select>
                </div>
                <div class="clear"></div>
            </div>
        }
        else
        {
            <p class="pad20">No live surveys found</p>
        }
    </div>
</div>

<div id="responsesDiv">

</div>

@section scripts
{
    <script src="~/sv/js/Responses.js"></script>
  
}


