@model SurveyShareViewModel 
@{
    ViewData["Title"] = "Share Survey";
}
                        
<div class="box">
    <div class="header">
		<h4>
			Share Survey
		</h4>
	</div> 
    <div class="content">
        <form asp-action="Share" method="post">
            <table class="normal bt-dataTable" border="0"  cellpadding="0" cellspacing="0" width="100%" id="dataTable">
                <thead>
                    <tr>
                        <th>Survey Name</th>
                        <th>UserName</th>
                        <th>Share</th>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.Users.Count; i++)
                    {
                        <tr>
                            <td>@Model.SurveyName</td>
                            <td>@Model.Users[i].UserName</td>
                            <td><input type="checkbox" asp-for=Users[i].IsChecked /></td>
                            <td>
                                <input type="hidden" asp-for=SurveyId />
                                <input type="hidden" asp-for=Users[i].UserId />
                            </td>
						</tr>                            
                    }
                </tbody>
            </table>

            <div class="form-actions margin-reset">
                <div class="pull-right">
                    <button type="submit" class="btn btn-success pull-right">Share Survey</button>
                </div>
            </div>
        </form>
    </div>
</div>                        

