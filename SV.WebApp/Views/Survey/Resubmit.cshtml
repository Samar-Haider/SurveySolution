@model Survey
@{
    ViewData["Title"] = "Resubmit Survey";
}

<div class="box">
    <div class="header"><h4>Delete Survey</h4></div>
    <div class="content">
        <form asp-action="Resubmit" class="form-horizontal margin-reset" method="post">

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="LogoPath" />
            <input type="hidden" asp-for="BannerPath" />
            <input type="hidden" asp-for="BackgroundImagePath" />

            <div class="rowelement">
                <div class="span5">
                    <p>By re-submitting this survey it will be available to the respective reviewer to review it.</p>
                    <p>Are you sure you want to re-submit this survey?</p>
                </div>
            </div>

            <div class="form-actions margin-reset">
                <div class="pull-right">
                    <a asp-controller="Survey" asp-action="Index" class="btn">Cancel</a>
                    <button type="submit" class="btn btn-success">Resubmit</button>
                </div>
            </div>

        </form>
    </div>
</div>
