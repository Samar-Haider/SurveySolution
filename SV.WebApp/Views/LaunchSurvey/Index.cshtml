@model IEnumerable<Survey>
@{
    ViewData["Title"] = "Launch Survey";
}
                  
<div class="box">
        <div class="header">
            <h4>
                Launched Surveys
                @*<a class="btn btn-small pull-right poscenter" asp-action="Create">Launch Survey</a>*@
                <a class="btn btn-small pull-right poscenter" asp-action="EditTemplate">Edit Email Template</a>
            </h4>
        </div> 
    <div class="content">
    @if(Model.Count() > 0)
    {
        <table class="normal bt-dataTable" border="0"  cellpadding="0" cellspacing="0" width="100%" id="dataTable">
            <thead>
                <tr>
                    <th>Survey Name</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.StartDate?.ToString("dd MMM yyyy, hh':'mm tt")</td>
                        <td>@item.EndDate?.ToString("dd MMM yyyy, hh':'mm tt")</td>
                        <td>Launched</td>
                        <td class="w80">
                            <ul class="table-actions">
                                <li><a asp-action="Edit" title="Edit Launch Survey" asp-route-id="@item.Id"><i class="icon-edit"></i></a></li>
                                <li><a asp-action="Delete" title="Remove from Launch Survey" asp-route-id="@item.Id"><i class="icon-remove"></i></a></li>
                                <li><a asp-action="ShareSurvey" title="Share Survey With Customers" asp-route-id="@item.Id"><i class="icon-share"></i></a></li>
                                <li><a asp-action="DeletePreviousReponses" title="Delete Previous Responses" asp-route-id="@item.Id"><i class="icon-trash"></i></a></li>
                            </ul>
                        </td>
                    </tr>
                }	
            </tbody>
        </table>
    }
    else
    {
        <p class="pad20">No Live Surveys found</p>
        <p class="pad20">There are no published surveys. First you need to <a data-toggle="modal" href="?step=1">publish a survey</a></p>   
    }
    </div>
</div>


