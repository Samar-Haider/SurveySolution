@model IEnumerable<Departments>
@{
    ViewData["Title"] = "Departments";
}
<div class="box">
    <div class="header">
        <h4>
            Departments
            <a class="btn btn-small pull-right poscenter" asp-action="Create">Add Department</a>
        </h4>
    </div>
    <div class="content">

        @*If users found in database*@
        @if (Model.Count() > 0)
        {
            <table class="normal bt-dataTable" border="0" cellpadding="0" cellspacing="0" width="100%" id="dataTable">
                <thead>
                    <tr>
                        <th>Department Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Department</td>

                            <td>
                                <ul class="table-actions">
                                    <li><a asp-action="Update" asp-route-id="@item.ID"><i class="icon-edit"></i></a></li>
                                    <li><a asp-action="Delete" asp-route-id="@item.ID"><i class="icon-trash"></i></a></li>
                                </ul>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        }

        @*If no user in database*@
        @if (Model.Count() < 1)
        {
            <p class="pad20">No Departments found</p>
            <p class="pad20">There are no departments in system. First you need to <a asp-action="Create">create a department</a></p>
        }

    </div>
</div>  